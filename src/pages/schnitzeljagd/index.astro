---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';

const entries = await getCollection('cityThemeAge', ({ data }) => {
  return data.publish !== false;
});
---

<Base 
  title="Schnitzeljagd - Fertige Vorlagen für Kindergeburtstage"
  description="Sofort druckbare Schnitzeljagd-Vorlagen für verschiedene Städte, Themen und Altersgruppen. Mit Audio-Hinweisen und Indoor-Fallback."
>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-center mb-12">Schnitzeljagd-Vorlagen</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {entries.map((entry) => (
        <div class="card">
          <h2 class="text-xl font-semibold mb-2">
            <a href={`/schnitzeljagd/${entry.slug}`} class="text-salbei hover:text-ton">
              {entry.data.h1}
            </a>
          </h2>
          <p class="text-gray-600 mb-4">{entry.data.heroSubtitle}</p>
          <div class="flex justify-between text-sm text-gray-500">
            <span>{entry.data.city}</span>
            <span>{entry.data.durationMin} Min</span>
            <span>{entry.data.ageBand} Jahre</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</Base>